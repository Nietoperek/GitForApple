<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitForApple.Views.DetailsPage"
              Title="{Binding Title}"
             x:Name="BrowseItemsPage">
    <ContentPage.Content>
        <Grid Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="https://xamarin.com/content/images/pages/forms/example-app.png" />
            </StackLayout>
            <StackLayout Margin="5, 0, 0, 0" Grid.Row="0" Grid.Column="1" VerticalOptions="Center">
                <StackLayout Margin ="5" Orientation="Horizontal">
                    <Label Text="Language:" Style="{DynamicResource ListItemTextStyle}" WidthRequest="85" FontSize="13"/>
                    <Label HorizontalOptions="FillAndExpand" Text="{Binding Item.Language}" Style="{DynamicResource ListItemTextStyle}" FontSize="13"/>
                </StackLayout>
                <StackLayout Margin ="5" Orientation="Horizontal">
                    <Label Text="Forks:" Style="{DynamicResource ListItemDetailTextStyle}" WidthRequest="85" FontSize="13"/>
                    <Label HorizontalOptions="FillAndExpand" Text="{Binding Item.Forks}" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13"/>
                </StackLayout>
                <StackLayout Margin ="5" Orientation="Horizontal">
                    <Label Text="Last update:" Style="{DynamicResource ListItemDetailTextStyle}" WidthRequest="85" FontSize="13"/>
                    <Label HorizontalOptions="FillAndExpand" Text="{Binding Item.lastUpdatedAt}" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Label Text="{Binding Item.Description}" LineBreakMode="NoWrap" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="23"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>