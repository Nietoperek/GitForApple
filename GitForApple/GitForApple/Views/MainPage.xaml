<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GitForApple"
             x:Class="GitForApple.Views.MainPage"             
             Title="{Binding Title}"
             x:Name="BrowseItemsPage">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="absLayout">            
            <ActivityIndicator x:Name="ProgressBar" 
                                   AbsoluteLayout.LayoutBounds=".5,0,50,50"
                                   HeightRequest="50"
                                   AbsoluteLayout.LayoutFlags="XProportional"                                   
                                   Color="{StaticResource Accent}}"                                    
                                   IsRunning="true"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="CenterAndExpand"/>
            <TableView x:Name="TableView" AbsoluteLayout.LayoutFlags="All"  AbsoluteLayout.LayoutBounds="0,0,1,1">
                <TableSection x:Name="TableSection">
                </TableSection>
            </TableView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>